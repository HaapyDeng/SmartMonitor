<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#202227"
    android:orientation="vertical"
    tools:context="cn.nodemedia.demo.com.nodemedia.demo.MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:gravity="center_vertical"
                android:text="宿舍-入口监控"
                android:textColor="#FFFFFFFF"
                android:textSize="20dp" />

            <LinearLayout
                android:layout_width="912dp"
                android:layout_height="400dp">

                <cn.nodemedia.NodePlayerView
                    android:id="@+id/nodeplayerview1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>


        </LinearLayout>

        <ImageView
            android:layout_width="33dp"
            android:layout_height="wrap_content"
            android:contentDescription="TODO" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:contentDescription="TODO" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="108dp"
                android:background="#FF223137"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="32dp"
                    android:text="校内通知"
                    android:textColor="#FFFFFFFF"
                    android:textSize="20dp" />

                <com.nodemedia.demo.MarqureeTextView
                    android:id="@+id/notice"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:ellipsize="marquee"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:gravity="center_vertical"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:paddingLeft="32dp"
                    android:singleLine="true"
                    android:text="暂无通知"
                    android:textColor="#CDCDCD"
                    android:textSize="20dp" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:contentDescription="TODO" />

            <LinearLayout
                android:id="@+id/v2"
                android:layout_width="912dp"
                android:layout_height="268dp"
                android:background="#FF223137"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:contentDescription="TODO" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="32dp"
                    android:text="识别结果"
                    android:textColor="#FFFFFFFF"
                    android:textSize="24dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/ll__11"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:visibility="invisible">

                        <RelativeLayout
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:gravity ="center">

                            <ImageView
                                android:id="@+id/img1"
                                android:layout_width="95dp"
                                android:layout_height="95dp"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:src="@drawable/img_moshengrenbiaoji" />

                            <ImageView
                                android:id="@+id/rl"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_centerInParent="true"
                                android:src="@drawable/qianjinceng" />
                        </RelativeLayout>

                        <LinearLayout
                            android:id="@+id/ll_text"
                            android:layout_width="116dp"
                            android:layout_height="95dp"
                            android:background="#365E67"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/name1"
                                android:layout_width="116dp"
                                android:layout_height="60dp"
                                android:gravity="center"
                                android:text="校外人员"
                                android:textColor="#FFFFFFFF"
                                android:textSize="24dp" />

                            <TextView
                                android:id="@+id/grade1"
                                android:layout_width="116dp"
                                android:layout_height="40dp"
                                android:gravity="center"
                                android:text="请勿擅自进入"
                                android:textColor="#FFFFFFFF"
                                android:textSize="16dp" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll__12"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:visibility="invisible">

                        <RelativeLayout
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:gravity="center">

                            <ImageView
                                android:id="@+id/img2"
                                android:layout_width="95dp"
                                android:layout_height="95dp"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:src="@drawable/a0101" />

                            <ImageView
                                android:id="@+id/rl2"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_centerInParent="true"
                                android:src="@drawable/qianjinceng" />
                        </RelativeLayout>

                        <LinearLayout
                            android:id="@+id/ll_text2"
                            android:layout_width="116dp"
                            android:layout_height="95dp"
                            android:background="#365E67"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/name2"
                                android:layout_width="116dp"
                                android:layout_height="60dp"
                                android:gravity="center"
                                android:text="校外人员"
                                android:textColor="#FFFFFFFF"
                                android:textSize="24dp" />

                            <TextView
                                android:id="@+id/grade2"
                                android:layout_width="116dp"
                                android:layout_height="40dp"
                                android:gravity="center"
                                android:text="请勿擅自进入"
                                android:textColor="#FFFFFFFF"
                                android:textSize="16dp" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">

                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="912dp"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:text="@string/out_in_co"
                android:textColor="#FFFFFFFF"
                android:textSize="24dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_weight="7"
                    android:background="#223B42"
                    android:ems="1"
                    android:gravity="center"
                    android:paddingLeft="5dp"
                    android:text="@string/in"
                    android:textColor="#27E6FF"
                    android:textSize="20dp" />

                <LinearLayout
                    android:id="@+id/customBarChart1"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_weight="2"
                    android:background="#223B42"
                    android:orientation="vertical">

                </LinearLayout>

                <ImageView
                    android:layout_width="1dp"
                    android:layout_height="120dp"
                    android:background="#3E7680" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="6"
                    android:background="@color/color1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/time_hour"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:gravity="center"
                        android:textColor="#6AEEFF"
                        android:textSize="30dp" />

                    <TextView
                        android:id="@+id/time_year"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="top|center_horizontal"
                        android:textColor="#6AEEFF"
                        android:textSize="16dp" />

                </LinearLayout>


            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#666666" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_weight="7"
                    android:background="#223B42"
                    android:ems="1"
                    android:gravity="center"
                    android:paddingLeft="5dp"
                    android:text="@string/out"
                    android:textColor="#FF6464"
                    android:textSize="20dp" />

                <LinearLayout
                    android:id="@+id/customBarChart2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="#223B42"
                    android:orientation="vertical">

                </LinearLayout>

                <ImageView
                    android:layout_width="1dp"
                    android:layout_height="120dp"
                    android:background="#3E7680" />

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_weight="6"
                    android:background="@color/color1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/tianqi_img"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:src="@drawable/qing" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/week"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textColor="#6AEEFF"
                            android:textSize="18dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="·"
                            android:textColor="#6AEEFF" />

                        <TextView
                            android:id="@+id/tianqi_text"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="晴"
                            android:textColor="#6AEEFF"
                            android:textSize="18dp" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:layout_width="33dp"
            android:layout_height="280dp"
            android:contentDescription="TODO" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="912dp"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:text="@string/now_time_co"
                android:textColor="#FFFFFFFF"
                android:textSize="24dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:orientation="horizontal">


                <WebView
                    android:id="@+id/webview"
                    android:layout_width="match_parent"
                    android:layout_height="240dp" />


            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="14dp" />


</LinearLayout>
